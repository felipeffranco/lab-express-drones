<div class='container'>
    <div class="encabezado mt-5">
        <h2>Create a new drone</h2>
    </div>
    <div>

        <form action="/drones/create" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Model</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>

            <div class="mb-3">
                <label for="propellers" class="form-label">Propellers</label>
                <input type="number" class="form-control" id="propellers" name="propellers">
            </div>

            <div class="mb-3">
                <label for="maxSpeed" class="form-label">Max speed</label>
                <input type="number" class="form-control" id="maxSpeed" name="maxSpeed">
            </div>
            <div class="d-grid mt-5">
                <button type="submit" class="btn btn-dark btn-lg">Create drone</button>
            </div>

        </form>
    </div>



</div>