<div class='container'>
    <div class="encabezado mt-5">
        <h2>Update the drone</h2>
    </div>
    <div>

        <form action="/drones/:drone_id/edit" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Model</label>
                <input type="text" class="form-control" id="name" name="name" value="{{name}}">
            </div>

            <div class="mb-3">
                <label for="propellers" class="form-label">Propellers</label>
                <input type="number" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
            </div>

            <div class="mb-3">
                <label for="maxSpeed" class="form-label">Max speed</label>
                <input type="number" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
            </div>


            <input type="hidden" name="drone_id" value="{{_id}}">

            <div class="d-grid mt-5">
                <button type="submit" class="btn btn-dark btn-lg">Update</button>
            </div>

        </form>
    </div>



</div>